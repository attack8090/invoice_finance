# Server Configuration
ENVIRONMENT=development
PORT=8087
HOST=0.0.0.0
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/bank_integration_db
DATABASE_DRIVER=postgres
DATABASE_MAX_CONNECTIONS=25

# JWT and Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
API_KEY_REQUIRED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-API-Key

# External Services
REDIS_URL=redis://localhost:6379
MESSAGE_QUEUE_URL=amqp://guest:guest@localhost:5672/
AUDIT_SERVICE_URL=http://localhost:8089

# Logging and Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=false

# Business Configuration
MAX_CREDIT_AMOUNT=10000000.0
MIN_CREDIT_AMOUNT=1000.0
DEFAULT_CREDIT_TERMS=30
FUNDING_MATCHING_ENABLED=true
REAL_TIME_PROCESSING=true

# Compliance Configuration
MAX_DAILY_TRANSACTION_AMOUNT=1000000.0
MAX_MONTHLY_TRANSACTION_AMOUNT=10000000.0
SUSPICIOUS_ACTIVITY_THRESHOLD=50000.0
REQUIRED_KYC_DOCUMENTS=id_document,proof_of_address,financial_statements
AML_CHECK_REQUIRED=true

# Feature Flags
ENABLE_BULK_PROCESSING=true
ENABLE_REAL_TIME_TRANSFERS=true
ENABLE_CREDIT_SCORING=true
ENABLE_FRAUD_DETECTION=true
ENABLE_REGULATORY_REPORTING=true

# Epic 4 Compliance Configuration
EPIC4_ENABLED=true
EPIC4_REPORTING_ENDPOINT=https://epic4.reporting.gov
EPIC4_API_KEY=your-epic4-api-key
EPIC4_CERT_PATH=/path/to/epic4-cert.pem
EPIC4_AUDIT_TRAIL_REQUIRED=true
EPIC4_TRANSACTION_REPORTING=true
EPIC4_AUTO_FILING=true
EPIC4_COMPLIANCE_CHECKS=kyc,aml,sanctions,pep
EPIC4_REPORTING_FREQUENCY=daily
EPIC4_DATA_RETENTION=61320h # 7 years
EPIC4_ENCRYPTION_REQUIRED=true

